{
    "config": {
        "platform": {
            "php": "8.0.1"
        },
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "monolog/monolog": "^2.1",
        "php-di/php-di": "^6.2",
        "slim/http": "^1.2",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5",
        "slim/twig-view": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "compile": "@php scripts/optimize.php"
    }
}
