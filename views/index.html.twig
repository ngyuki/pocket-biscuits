{% extends "layout/layout.html.twig" %}

{% block navbar %}
    <ul class="nav navbar-nav">
        <li><a href="{{ path('top') }}">Latest</a></li>
        <li><a href="{{ path('random') }}">Random</a></li>
    </ul>
    <form class="navbar-form navbar-right">
        <a href="{{ path('logout') }}" class="btn btn-default">Logout</a>
    </form>
    <div class="navbar-text navbar-right">
        {{ username }}
    </div>
{% endblock %}

{% block content %}
    <ul class="list-group">
        {% for item in list %}
            <li class="list-group-item" data-item-id="{{ item.item_id }}">
                <a href="" class="badge js-toggle-archive">Archive</a>
                <a href="{{ item.resolved_url }}" target="_blank">
                    {{ item.resolved_title }}
                </a>
            </li>
        {% endfor  %}
    </ul>
{% endblock %}
